{
  "name": "product-catalog-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "local:docker": "docker compose -f docker-compose.local.yml --env-file .env.local",
    "local:container:start": "npm run local:docker up -- -d --remove-orphans",
    "local:container:stop": "npm run local:docker down",
    "local:container:restart": "npm run local:container:stop && npm run local:container:start",
    "local:container:exec": "npm run local:docker exec",
    "local:container:logs": "npm run local:docker logs",
    "dev": "caddy start && npm run build && sam local start-api",
    "typecheck": "tsc",
    "build:functions": "esbuild src/functions/*.ts --bundle --minify --platform=node --target=es2022 --outdir=dist/functions",
    "build": "npm run typecheck && npm run build:functions",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "seed:up": "dotenvx run --env-file=.env.seed -- tsx src/seeds up",
    "seed:down": "dotenvx run --env-file=.env.seed -- tsx src/seeds down",
    "package:preflight": "cd dist && 7z a preflight.zip functions/preflight.js",
    "package:auth": "cd dist && 7z a auth.zip functions/auth.js",
    "package:products": "cd dist && 7z a products.zip functions/products.js",
    "package:all": "yarn package:preflight && yarn package:auth && yarn package:products"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.39.0",
    "@middy/core": "^6.0.0",
    "@middy/http-cors": "^6.1.6",
    "@middy/http-json-body-parser": "^6.0.0",
    "@middy/http-router": "^6.1.5",
    "@middy/input-output-logger": "^6.1.5",
    "class-transformer": "^0.5.1",
    "cookie": "^1.0.2",
    "dynamoose": "^4.0.3",
    "dynamoose-logger": "^4.0.3",
    "http-method-enum": "^1.0.0",
    "http-status": "^2.1.0",
    "js-sha256": "^0.11.0",
    "jsonwebtoken": "^9.0.2",
    "klona": "^2.0.6",
    "luxon": "^3.5.0",
    "ms": "^2.1.3",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/aws-lambda": "^8.10.147",
    "@types/chance": "^1.1.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/luxon": "^3.4.2",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "chance": "^1.1.12",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "prettier": "^3.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.7.3"
  }
}
